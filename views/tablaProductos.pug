extends listado.pug 

block tablaProductos
    if productos.length > 0
        table( class="table table-dark  table-hover")
            thead
                tr
                    th Nombre del producto
                    th Precio
                    th Imagen 
            tbody
                each producto in productos 
                    tr
                        td= producto.nombre
                        td= producto.precio
                        td
                            img(src=producto.url, alt="imagen", style="height: 35px;" )
    else
        div(
            class="alert alert-warning" 
            role="alert")
            p No se encontraron productos
    div(class="d-flex mt-5")
        a(href="./" class="btn btn-primary ms-auto") << Volver